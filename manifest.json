{
  "manifest_version": 3,
  "name": "AI Usage Tracker",
  "version": "1.7",
  "permissions": ["storage", "alarms"],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/settings/usage"],
      "js": ["content_claude.js"]
    }
  ],
  "action": {}
}